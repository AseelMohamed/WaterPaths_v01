{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build WaterPaths (gcc)",
            "type": "shell",
            "command": "make",
            "args": ["gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/WaterPaths"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build WaterPaths (debug)",
            "type": "shell",
            "command": "make",
            "args": ["gcc-debug"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/WaterPaths"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Clean WaterPaths",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/WaterPaths"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run WaterPaths",
            "type": "shell",
            "command": "./FDBsimulation",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/WaterPaths"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": "Build WaterPaths (gcc)"
        }
    ]
}